{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "src",
    "lib": [
        "es2016"
    ],
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "declarationDir": "types",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
      "src/**/*.spec.ts",
      "node_modules",
      "dist"
  ]
}
